@model ResultProductDetailDTO

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Detayı</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        
        header {
            background-color: #f1f1f1;
            padding: 20px;
            text-align: center;
        }
        
        main {
            padding: 20px;
        }
        
        .product-card {
            border: 1px solid #ddd;
            margin-bottom: 20px;
            padding: 20px;
        }
        
        .product-image {
            width: 100%;
            height: auto;
        }
        
        footer {
            background-color: #f1f1f1;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <h1>Ürün Detayı</h1>
    </header>
    <main>       
        <div class="product-card">
            <img class="product-image" src="@Model.Product.Image" alt="Ürün resmi">
            <h2>@Model.Product.Title</h2>
            <p>Fiyat: @Model.Product.Price.ToString("C2")</p>
            <p>Ağırlık: @Model.Product.Weight Kg</p>
            <p>Birim: @Model.Product.Unit</p>
            <p>Birim: @Model.Description</p>
        </div>
    </main>
    <footer>
        <p>Tasarım & Copyright © 2023 BLACKBOXAI</p>
    </footer>
</body>
</html>