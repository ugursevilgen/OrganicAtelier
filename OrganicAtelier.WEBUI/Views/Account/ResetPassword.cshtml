@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

@await Component.InvokeAsync("_AccountResetPasswordViewComponentPartial")
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-6 offset-3">               
                <form asp-action="ResetPassword" asp-controller="Account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="Token" value="@Model.Token" />
                    <input type="hidden" name="Email" value="@Model.Email" />
                   
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RePassword" class="form-label"></label>
                        <input asp-for="RePassword" class="form-control" />
                        <span asp-validation-for="RePassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-success">Şifre Yenile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



